<div data-hook="modeler_step_process_setting_form_fields">
  <%= f.field_container :step_code, :class => ['form-group'] do %>
    <%= f.label :step_code_id, Mes.t(:step_code) %>
    <%= f.select :step_code_id, options_for_select(Mes::StepCode.pluck(:name, :id), @step_process_setting.step_code_id), { include_blank: true }, class: 'form-control' %>
  <% end %>

  <%= f.field_container :order_type, :class => ['form-group'] do %>
    <%= f.label :order_type_id, Mes.t(:order_type) %><br>
    <%= f.select :order_type_id, options_for_select(Mes::OrderType.pluck(:name, :id), @step_process_setting.order_type_id), { include_blank: true }, class: 'form-control' %>
  <% end %>

  <%= f.field_container :product, :class => ['form-group'] do %>
    <%= f.label :product_id, Mes.t(:product) %>
    <%= f.select :product_id, options_for_select(Mes::Product.pluck(:product_code, :id), @step_process_setting.product_id), { include_blank: true }, class: 'form-control' %>
  <% end %>

  <%= f.field_container :same_unit_max_defect_allowed, :class => ['form-group'] do %>
    <%= f.label :same_unit_max_defect_allowed, Mes.t(:same_unit_max_defect_allowed) %><br>
    <%= f.text_field :same_unit_max_defect_allowed, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :future_rework_step_code, :class => ['form-group'] do %>
    <%= f.label :future_rework_step_code_id, Mes.t(:future_rework_step_code) %><br>
    <%= f.select :future_rework_step_code_id, options_for_select(Mes::StepCode.pluck(:name, :id), @step_process_setting.future_rework_step_code_id), { include_blank: true }, class: 'form-control' %>
  <% end %>

  <%= f.field_container :require_first_article_inspection, :class => ['form-group'] do %>
    <%= f.label :require_first_article_inspection, Mes.t(:require_first_article_inspection) %><br>
    <%= f.text_field :require_first_article_inspection, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :unit_sample_percent, :class => ['form-group'] do %>
    <%= f.label :unit_sample_percent, Mes.t(:unit_sample_percent) %><br>
    <%= f.text_field :unit_sample_percent, :class => 'form-control' %>
  <% end %>
</div>
